{
  "type": "header",
  "name": "Header",
  "sections": {
    "announcement": {
      "type": "announcement",
      "settings": {
        "show_border": false,
        "layout": "slider",
        "slider_speed": 7,
        "text_alignment": "center",
        "show_arrows": false,
        "marquee_speed": 100,
        "message_spacing": 10,
        "text_size": 2,
        "bg_color": "#f7f7f7",
        "color": "#545454",
        "padding_top": 0,
        "padding_bottom": 0
      }
    },
    "header": {
      "type": "header",
      "blocks": {
        "toolbar": {
          "type": "toolbar",
          "disabled": true,
          "settings": {
            "text": "<p>Toolbar<\/p>",
            "menu": "main-menu",
            "show_border": false,
            "border_opacity": 50,
            "show_social_links": true,
            "show_gift_card": true,
            "show_locale_selector": true,
            "show_country_selector": true,
            "show_country_name": false,
            "show_country_flag": true,
            "bg_color": "#fafafa",
            "color": "",
            "padding_top": 0,
            "padding_bottom": 0
          }
        }
      },
      "block_order": [
        "toolbar"
      ],
      "custom_css": [
        ".header__desktop {height: max-content; position: fixed; top: 0;}",
        ".header__desktop:hover {background-color: white; transition: background-color, backdrop-filter 0.4s ease; height: max-content; position: fixed; top: 0;}",
        ".header__desktop:hover span {color: black; transition: color 0.4s ease;}",
        ".header__dropdown {position: fixed; top: 40px; width: 100vw; color: #000; overflow: show;}"
      ],
      "settings": {
        "header_sticky": false,
        "header_style": "logo_beside",
        "show_separator_line": false,
        "separator_opacity": 0,
        "show_icons": false,
        "icon_as_circle": false,
        "cart_icon_family": "bag",
        "logo": "{{ shop.brand.logo }}",
        "logo_max_limit": 110,
        "logo_max_limit_mobile": 105,
        "main_menu_linklist": "main-menu",
        "mobile_menu_linklist": "main-menu",
        "enable_search": false,
        "show_social_icons": false,
        "button_text": "",
        "button_link": "",
        "button_type": "btn--primary",
        "show_locale_selector": false,
        "show_country_selector": false,
        "show_country_name": false,
        "show_country_flag": false,
        "highlight_item": "Sale",
        "highlight_item_color": "#ff8900",
        "transparent_home": true,
        "transparent_product_page": true,
        "transparent_collection": true,
        "transparent_article": true,
        "transparent_page": true,
        "secondary_menu_linklist": "",
        "tertiary_menu_linklist": "",
        "padding_top": 11,
        "padding_bottom": 9
      }
    }
  },
  "order": [
    "announcement",
    "header"
  ]
}