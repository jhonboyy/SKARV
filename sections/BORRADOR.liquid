<script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.13/lottie.min.js"></script>
<script>
  function addLottieAnimation() {
    // Crear un nuevo div para la animación
    const lottieContainer = document.createElement('div');
    lottieContainer.id = 'lottie-animation'; // Puedes agregar un ID para identificarlo fácilmente si es necesario
    lottieContainer.style.width = '200px'; // Establece el ancho deseado
    lottieContainer.style.height = '200px'; // Establece la altura deseada
    lottieContainer.style.position = 'absolute'; // Establece la posición absoluta
    lottieContainer.style.top = '1.5vw'; // Coloca la animación en la parte superior
    lottieContainer.style.left = '3.5vh'; // Coloca la animación a la izquierda

    // Añadir el contenedor de la animación al final de .site-footer
    const siteFooter = document.querySelector('.site-footer');
    siteFooter.appendChild(lottieContainer);

    // Configurar la animación Lottie
    const animation = bodymovin.loadAnimation({
      container: lottieContainer,
      renderer: 'svg',
      loop: true,
      autoplay: true,
      path: 'https://cdn.shopify.com/s/files/1/0819/4939/3226/files/data.json?v=1714555678' // URL de la animación Lottie
    });
  }

  // Llama a la función addLottieAnimation cuando el DOM esté cargado
  document.addEventListener('DOMContentLoaded', function() {
    addLottieAnimation();
  });
</script>